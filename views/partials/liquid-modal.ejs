<div class="modal fade" id="liquid-modal" tabindex="-1" role="dialog" 
  aria-labelledby="liquid-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" 
          aria-hidden="true">
        &times;
        </button>
        <h4 class="modal-title" id="liquid-modal">
        Liquid Temperature Sensor Configuration
        </h4>
      </div>
      <div class="modal-body">
      <form role="form">
        <div class="checkbox">
          <label>
            <input type="checkbox" name="used" value="true" checked>
             Monitor Sensor
          </label>
        </div>
        <div class="form-group">
          <label for="lower" class="control-label">
          Lower Bound
          </label>
          <input id="lower" type="number" name="lower" class="form-control">
        </div>
        <div class="form-group">
          <label for="upper" class="control-label">
          Upper Bound
          </label>
          <input id="upper" type="number" name="upper" class="form-control">
        </div>
        <div class="checkbox">
          <label>
            <input type="checkbox" name="auto" value="true"> Automatic Cancel
          </label>
        </div>
      </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" id="cancel"
          data-dismiss="modal">
        Close
        </button>
        <button type="button" class="btn btn-success" id="save"
          data-dismiss="modal">
        Save
        </button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->