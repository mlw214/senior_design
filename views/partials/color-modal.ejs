<div class="modal fade" id="color-modal" tabindex="-1" role="dialog" 
  aria-labelledby="color-modal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" 
          aria-hidden="true">
        &times;
        </button>
        <h4 class="modal-title" id="color-modal">
        Camera Configuration
        </h4>
      </div>
